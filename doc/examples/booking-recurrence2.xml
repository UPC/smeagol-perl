<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="application/xml" href="booking.xsl"?>
<!DOCTYPE booking SYSTEM "http://devel.cpl.upc.edu/recursos/export/HEAD/angel/xml/booking.dtd">

<!-- EXEMPLE: reserva per a les reunions setmanals de l'equip del projecte Sméagol -->
<!-- Reserva del recurs "30" (vegeu l'atribut xlink:href del node <booking>) cada dijous de 9:30 a 14:00 -->

<booking xmlns:xlink="http://www.w3.org/1999/xlink" xlink:type="simple" xlink:href="/resource/30/booking/4">
    <id>4</id>
    <description>Reunió projecte Sméagol</description>
    
    <!-- En el cas de reserves recurrents, els elements <from> i <to> que pengen      -->
    <!-- de l'arrel indiquen la DURACIÓ del període reservat                          -->
    <!-- En aquest cas, la duració seria de 4 hores i 30 minuts (de 9:30 a 14 hores), -->
    <!-- ja que el dia el mes i l'any són els mateixos en el from i en el <to>        -->
    <from>
        <year>2009</year><month>7</month><day>9</day><hour>9</hour><minute>30</minute><second>0</second>
    </from>
    <to>
        <year>2009</year><month>7</month><day>9</day><hour>14</hour><minute>0</minute><second>0</second>
    </to>
    <recurrence freq="weekly">
        <dtstart>
            <year>2009</year><month>7</month><day>9</day><hour>9</hour><minute>30</minute><second>0</second>
        </dtstart>
        <!-- No hi ha element <dtend> (la reserva no acaba mai) -->
        <byminute value="30"/>
        <byhour value="9"/>
        <byday value="th"/>
    </recurrence>
    <info>
        <![CDATA[
        Reunió setmanal de l'equip Sméagol. Consulteu la llista de correu bla, bla, bla...
        ]]>
    </info>
</booking>